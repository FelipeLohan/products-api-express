{
  "compilerOptions": {
    "target": "ES6",                   
    "module": "commonjs",                
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "strict": true,                     
    "resolveJsonModule": true,           
    "typeRoots": ["node_modules/@types"], 
    "types": ["node", "express"]         
  },
  "include": [
    "src/**/*.ts"                       
  ],
  "exclude": [
    "node_modules"                       
  ]
}